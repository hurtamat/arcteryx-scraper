@page "/"
@using arcteryxScraper
@using arcteryxScraper.Models
@inject HtmlFetcher Fetcher
@inject HtmlParser Parser
@rendermode InteractiveServer

<PageTitle>Arc'teryx Scraper</PageTitle>

<div class="container mt-5">
    <h1 class="display-4">Arc'teryx Outlet Scraper</h1>
    <p class="lead">Search for Arc'teryx products by country and gender</p>

    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">Search Parameters</h5>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="countrySelect" class="form-label">Country</label>
                    <select class="form-select" id="countrySelect" @bind="_selectedCountry">
                        @foreach (var country in Enum.GetValues<InputCountry>())
                        {
                            <option value="@country">@GetCountryLabel(country)</option>
                        }
                    </select>
                </div>

                <div class="col-md-6 mb-3">
                    <label for="genderSelect" class="form-label">Gender</label>
                    <select class="form-select" id="genderSelect" @bind="_selectedGender">
                        @foreach (var gender in Enum.GetValues<InputGender>())
                        {
                            <option value="@gender">@gender</option>
                        }
                    </select>
                </div>
            </div>

            <button class="btn btn-primary" @onclick="SearchProducts" disabled="@_isLoading">
                @if (_isLoading)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                    <span>Searching...</span>
                }
                else
                {
                    <span>Search Products</span>
                }
            </button>
            <button class="btn btn-secondary ms-2" @onclick="LoadTestData">
                Load Test Data
            </button>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="alert alert-danger mt-4" role="alert">
            @_errorMessage
        </div>
    }

    @if (_catalog != null && _catalog.products.Any())
    {
        <div class="mt-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3>Products Found (@_catalog.products.Count)</h3>
                <select class="form-select w-auto" @bind="_selectedSortOrder" @bind:after="ApplySort">
                    @foreach (var sortOrder in Enum.GetValues<SortOrderType>())
                    {
                        <option value="@sortOrder">@GetSortOrderLabel(sortOrder)</option>
                    }
                </select>
            </div>

            <div class="row">
                @foreach (var product in _catalog.products)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text">
                                    <strong class="text-muted text-decoration-line-through">€@product.OriginalPrice.ToString("F2")</strong><br/>
                                    @if (product.DiscountPrice.HasValue)
                                    {
                                        <strong class="text-danger fs-5">€@product.MinRangePrice.ToString("F2") - €@product.DiscountPrice.Value.ToString("F2")</strong><br/>
                                        <span class="badge bg-success mt-2">@CalculateDiscountPercentage(product.OriginalPrice, product.MinRangePrice)% OFF</span>
                                    }
                                    else
                                    {
                                        <strong class="text-danger fs-5">€@product.MinRangePrice.ToString("F2")</strong><br/>
                                        @if (product.MinRangePrice < product.OriginalPrice)
                                        {
                                            <span class="badge bg-success mt-2">@CalculateDiscountPercentage(product.OriginalPrice, product.MinRangePrice)% OFF</span>
                                        }
                                    }
                                </p>
                                <a href="@product.Url" target="_blank" class="btn btn-sm btn-primary">View Product</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    private InputCountry _selectedCountry = InputCountry.Cz;
    private InputGender _selectedGender = InputGender.Mens;
    private SortOrderType _selectedSortOrder = SortOrderType.PriceAscending;
    private Catalog? _catalog;
    private bool _isLoading = false;
    private string _errorMessage = string.Empty;

    private async Task SearchProducts()
    {
        _isLoading = true;
        _errorMessage = string.Empty;
        _catalog = null;
        StateHasChanged();

        try
        {
            // Convert enum to lowercase string for API
            string country = _selectedCountry.ToString().ToLower();
            string gender = _selectedGender.ToString().ToLower();

            var htmlContent = await Fetcher.FetchHtmlAsync(country, "en", gender);
            var products = Parser.ParseProducts(htmlContent);
            _catalog = new Catalog(products);
            _catalog.SortProducts(_selectedSortOrder);
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private void ApplySort()
    {
        if (_catalog != null)
        {
            _catalog.SortProducts(_selectedSortOrder);
        }
    }

    private string GetSortOrderLabel(SortOrderType sortOrder)
    {
        return sortOrder switch
        {
            SortOrderType.PriceAscending => "Price: Low to High",
            SortOrderType.PriceDescending => "Price: High to Low",
            SortOrderType.DiscountByAmount => "Discount: Amount saved",
            SortOrderType.DiscountByPercentage => "Discount: % saved",
            _ => sortOrder.ToString()
        };
    }

    private int CalculateDiscountPercentage(decimal originalPrice, decimal discountedPrice)
    {
        if (originalPrice == 0) return 0;
        var discount = ((originalPrice - discountedPrice) / originalPrice) * 100;
        return (int)Math.Round(discount);
    }

    private string GetCountryLabel(InputCountry country)
    {
        return country switch
        {
            InputCountry.At => "🇦🇹 Austria",
            InputCountry.Be => "🇧🇪 Belgium",
            InputCountry.Ca => "🇨🇦 Canada",
