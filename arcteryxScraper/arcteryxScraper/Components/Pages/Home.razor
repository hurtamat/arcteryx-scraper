@page "/"
@using arcteryxScraper
@using arcteryxScraper.Models
@inject HtmlFetcher Fetcher
@inject HtmlParser Parser
@rendermode InteractiveServer

<PageTitle>Arc'teryx Scraper</PageTitle>

<div class="container mt-5">
    <h1 class="display-4">Arc'teryx Outlet Scraper</h1>
    <p class="lead">Search for Arc'teryx products by country and gender</p>

    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">Search Parameters</h5>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="countrySelect" class="form-label">Country</label>
                    <select class="form-select" id="countrySelect" @bind="selectedCountry">
                        @foreach (var country in Enum.GetValues<InputCountry>())
                        {
                            <option value="@country">@country</option>
                        }
                    </select>
                </div>

                <div class="col-md-6 mb-3">
                    <label for="genderSelect" class="form-label">Gender</label>
                    <select class="form-select" id="genderSelect" @bind="selectedGender">
                        @foreach (var gender in Enum.GetValues<InputGender>())
                        {
                            <option value="@gender">@gender</option>
                        }
                    </select>
                </div>
            </div>

            <button class="btn btn-primary" @onclick="SearchProducts" disabled="@isLoading">
                @if (isLoading)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                    <span>Searching...</span>
                }
                else
                {
                    <span>Search Products</span>
                }
            </button>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger mt-4" role="alert">
            @errorMessage
        </div>
    }

    @if (catalog != null && catalog.products.Any())
    {
        <div class="mt-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3>Products Found (@catalog.products.Count)</h3>
                <select class="form-select w-auto" @bind="selectedSortOrder" @bind:after="ApplySort">
                    @foreach (var sortOrder in Enum.GetValues<SortOrderType>())
                    {
                        <option value="@sortOrder">@GetSortOrderLabel(sortOrder)</option>
                    }
                </select>
            </div>

            <div class="row">
                @foreach (var product in catalog.products)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text">
                                    <strong>Original Price:</strong> €@product.OriginalPrice.ToString("F2")<br/>
                                    <strong>Min Range Price:</strong> €@product.MinRangePrice.ToString("F2")<br/>
                                    @if (product.DiscountPrice.HasValue)
                                    {
                                        <strong class="text-danger">Discount Price:</strong> <span class="text-danger">€@product.DiscountPrice.Value.ToString("F2")</span><br/>
                                        <span class="badge bg-success">Save €@((product.OriginalPrice - product.DiscountPrice.Value).ToString("F2"))</span>
                                    }
                                </p>
                                <a href="@product.Url" target="_blank" class="btn btn-sm btn-primary">View Product</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    private InputCountry selectedCountry = InputCountry.Cz;
    private InputGender selectedGender = InputGender.Mens;
    private SortOrderType selectedSortOrder = SortOrderType.PriceAscending;
    private Catalog? catalog;
    private bool isLoading = false;
    private string errorMessage = string.Empty;

    private async Task SearchProducts()
    {
        isLoading = true;
        errorMessage = string.Empty;
        catalog = null;
        StateHasChanged();

        try
        {
            // Convert enum to lowercase string for API
            string country = selectedCountry.ToString().ToLower();
            string gender = selectedGender.ToString().ToLower();

            var htmlContent = await Fetcher.FetchHtmlAsync(country, "en", gender);
            var products = Parser.ParseProducts(htmlContent);
            catalog = new Catalog(products);
            catalog.SortProducts(selectedSortOrder);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ApplySort()
    {
        if (catalog != null)
        {
            catalog.SortProducts(selectedSortOrder);
        }
    }

    private string GetSortOrderLabel(SortOrderType sortOrder)
    {
        return sortOrder switch
        {
            SortOrderType.PriceAscending => "Price: Low to High",
            SortOrderType.PriceDescending => "Price: High to Low",
            SortOrderType.Discount => "Highest Discount",
            _ => sortOrder.ToString()
        };
    }
}